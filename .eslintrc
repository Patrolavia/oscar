{
  "extends": "airbnb",
  "env": {
    "browser": true,
    "mocha": true,
    "node": true,
    "es6": true
  },
  "rules": {
    "valid-jsdoc": 2,

    // Disable until Flow supports let and const
    "block-scoped-var": 0,
    "no-var": 0,
    "vars-on-top": 0,
    "react/jsx-boolean-value": 0

    // Disable comma-dangle unless need to support it
    "comma-dangle": 0
  }
}
